<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/gradient" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="16dp"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="124dp"
                    android:layout_height="19dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="106dp"
                    android:gravity="center"
                    android:text="Pulsa"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/flash" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="97dp"
                    android:gravity="center"
                    android:text="Token Listrik"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingBottom="18dp"
                    android:src="@drawable/wallet" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="ShopePay"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:adjustViewBounds="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="30dp"
                    android:src="@drawable/box" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Exit"
                    android:textColor="#000000" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ll1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/gift" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="102dp"
                    android:gravity="center"
                    android:text="Transfer"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/money" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="94dp"
                    android:gravity="center"
                    android:text="Gopay"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingBottom="20dp"
                    android:src="@drawable/inbox" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="94dp"
                    android:gravity="center"
                    android:text="Riwayat"
                    android:textColor="#000000" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>



