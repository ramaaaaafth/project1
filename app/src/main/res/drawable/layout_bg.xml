<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#9C020C29" /><corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Top Color -->
    <item
        android:bottom="10px"
        android:right="3dp"
        android:top="1dp"
        android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#EDEDED" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>